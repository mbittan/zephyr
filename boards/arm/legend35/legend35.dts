/dts-v1/;
#include <seagate/seagate_legend.dtsi>

/ {
	model = "Seagate Legend 3.5 board";
	compatible = "legend35", "seagate,legend35";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	aliases {
		board-id = &board_id;
		pwm-led0 = &pwm_led0;
		led-strip = &led_strip_spi;
		watchdog0 = &iwdg;
	};

	led_pwm: pwmleds {
		compatible = "pwm-leds";
		label = "LED PWM";

		pwm_led0: pwm_led_0 {
			label = "Activity LED";
			pwms = <&pwm3 3 255 PWM_POLARITY_NORMAL>;
		};
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(24)>; /* STLink 8MHz clock */
	status = "okay";
};

&pll {
	clocks = <&clk_hse>;
	prediv = <1>;
	mul = <2>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(48)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};

&spi1 {
	status = "okay";
};

&led_strip_spi {
	chain-length = <12>;
	status = "okay";
};

&spi2 {
	status = "okay";
};

&spi_nor {
	status = "okay";
};

&dma1 {
	status = "okay";
};

&timers3 {
	status = "okay";
};

&pwm3 {
	status = "okay";
};

&usb {
	status = "okay";
};
